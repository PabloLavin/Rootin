<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground"
    tools:context=".ui.fragments.usuario_perfil">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:text="@string/app_name"
                android:textSize="@dimen/textoTitulo"
                android:textColor="@color/colorBackground"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <ImageButton
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="28dp"
        android:background="@color/colorBackground"
        android:scaleType="fitXY"
        android:src="@drawable/r_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar"
        app:srcCompat="@drawable/r_icon" />

    <ScrollView
        android:layout_width="411dp"
        android:layout_height="414dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.135">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtPerfil_NombreApellido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/textoTitulo"
                android:layout_marginBottom="10dp"
                android:text="@string/nombre_apellido"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/textoTitulo"
                android:layout_marginStart="@dimen/textoTitulo" />

            <TextView
                android:id="@+id/txtPerfil_Correo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/textoTitulo"
                android:layout_marginBottom="10dp"
                android:text="@string/correo_electronico"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/textoTitulo"
                android:layout_marginStart="@dimen/textoTitulo" />

            <TextView
                android:id="@+id/txtPerfil_CantidadRutinas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/textoTitulo"
                android:layout_marginBottom="10dp"
                android:text="Rutinas"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/textoTitulo"
                android:layout_marginStart="@dimen/textoTitulo" />

            <TextView
                android:id="@+id/txtPerfil_CantidadActividades"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/textoTitulo"
                android:layout_marginBottom="10dp"
                android:text="Actividades"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/textoTitulo"
                android:layout_marginStart="@dimen/textoTitulo" />

            <TextView
                android:id="@+id/txtPerfil_DiasRacha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/textoTitulo"
                android:layout_marginBottom="10dp"
                android:text="Racha mÃ¡xima"
                android:textSize="@dimen/textoSubtitulo"
                android:layout_marginStart="@dimen/textoTitulo" />
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>